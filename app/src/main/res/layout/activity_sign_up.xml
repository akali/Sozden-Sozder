<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="com.example.user.wordsfromword.SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="vertical"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/registerTextTextView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.12"
            android:text="ТІРКЕЛУ"
            android:textColor="@color/wordOnGray"
            android:gravity="center_horizontal"
            android:textSize="40dp"/>
        <EditText
            android:paddingLeft="5dp"
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.12"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="120dp"
            android:background="@color/bar"
            android:inputType="textEmailAddress"
            android:hint="Email"
            android:textColorHint="@color/editText"/>

        <EditText
            android:paddingLeft="5dp"
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.12"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="120dp"
            android:background="@color/bar"
            android:inputType="textPassword"
            android:hint="Құпия сөз"
            android:textColorHint="@color/editText"/>

        <EditText
            android:paddingLeft="5dp"
            android:id="@+id/nameEditText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.12"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="120dp"
            android:background="@color/bar"
            android:hint="Лақап"
            android:textColorHint="@color/editText"/>

        <Spinner
            android:id="@+id/cityEditText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.12"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="120dp"
            android:layout_marginBottom="20dp"
            android:background="@color/bar"
            android:hint="Қала"
            android:textColorHint="@color/editText"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:background="@color/bar"
        android:gravity="center_vertical">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            >
            <Button
                android:id="@+id/backButton"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="АРТҚА"
                android:textColor="@color/wordOnGray"
                android:background="@drawable/barsbutton"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">
            <Button
                android:id="@+id/registerButton"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="КЕЛЕСІ"
                android:textColor="@color/wordOnGray"
                android:background="@drawable/barsbutton"/>
        </RelativeLayout>
    </LinearLayout>



</LinearLayout>
