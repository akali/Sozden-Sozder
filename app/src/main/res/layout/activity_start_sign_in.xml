<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background"
              android:orientation="vertical"
              tools:context="com.example.user.wordsfromword.StartSignInActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="vertical"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/enterTextTextView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:text="КІРУ"
            android:textColor="@color/wordOnGray"
            android:gravity="center_horizontal"
            android:textSize="40dp"/>
        <LinearLayout
            android:visibility="visible"
            android:layout_marginTop="40dp"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginBottom="40dp"
            android:id="@+id/buttonLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:orientation="vertical">
            <Button
                android:id="@+id/numberLoginButton"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:background="@drawable/button_start"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:text="Телефон нөмері арқылы"
                android:textColor="@color/wordOnBlue"
                android:textSize="36sp"
                android:layout_gravity="center"
                />
            <Button
                android:layout_marginTop="10dp"
                android:id="@+id/addNumberButton"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:background="@drawable/button_start"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:text="Ескіше тіркелдіңіз бе?"
                android:textColor="@color/wordOnBlue"
                android:textSize="30sp"
                android:layout_gravity="center"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:background="@color/bar"
        android:gravity="center_vertical">
    </LinearLayout>
</LinearLayout>
