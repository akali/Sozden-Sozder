<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@color/background"
              tools:context="com.example.user.wordsfromword.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:background="@color/bar"

        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/exitButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.12"
            android:src="@drawable/ex"/>
        <TextView
            android:gravity="center_horizontal"
            android:id="@+id/pointTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:text="0"
            android:textSize="30sp"
            android:textColor="@color/wordOnBlue"
            />
        <TextView
            android:id="@+id/scoreTextTextView"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="@color/wordOnBlue"
            android:text=" ҰПАЙ"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content" />
        <TextView
            android:gravity="center_horizontal"
            android:id="@+id/timerTextView"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="0"
            android:textColor="@color/timer"/>



    </LinearLayout>
    <GridView
        android:id="@+id/listView"
        android:numColumns="4"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.5">
    </GridView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/backImageView"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="50dp"
            android:src="@drawable/red"
            />
        <TextView
            android:id="@+id/currentWordTextView"
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:layout_height="wrap_content"
            android:text="ЕМШІ"
            android:textSize="40dp"
            android:textColor="@color/gameText"
            android:gravity="center_horizontal"/>
        <ImageView
            android:id="@+id/doneImageView"
            android:gravity="right"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.2"
            android:src="@drawable/green"/>
    </LinearLayout>
    <LinearLayout
        android:background="@color/bar"
        android:layout_marginTop="10dp"
        android:layout_weight="0.2"
        android:orientation="horizontal"
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </LinearLayout>


</LinearLayout>
