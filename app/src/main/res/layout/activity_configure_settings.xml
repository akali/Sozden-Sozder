<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@color/background"
              tools:context="com.example.user.wordsfromword.ConfigureSettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:background="@color/bar"

        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:src="@drawable/back"/>
        <TextView
            android:id="@+id/scoreTextTextView"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="@color/wordOnBlue"
            android:text="User Configuration"/>
        <ImageView
            android:id="@+id/nextImageView"
            android:layout_width="0dp"
            android:layout_weight="0.12"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_media_ff"
            android:textColor="@color/timer"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/avatarImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/com_facebook_profile_picture_blank_square"
            android:layout_gravity="center"
            />
        <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/nameEditText"
            android:paddingLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.12"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="120dp"
            android:background="@color/bar"
            android:inputType="textEmailAddress"
            android:hint="Лақап"
            android:textColorHint="@color/editText"/>
        <Spinner
            android:id="@+id/cityEditText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.12"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="120dp"
            android:layout_marginBottom="20dp"
            android:background="@color/bar"
            android:hint="Қала"
            android:textColorHint="@color/editText"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        ></LinearLayout>
</LinearLayout>
