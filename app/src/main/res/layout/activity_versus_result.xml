<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bar"
    android:orientation="horizontal"
    tools:context="com.example.user.wordsfromword.VersusResultActivity">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/exitImageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:src="@drawable/exx"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8">

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.395"
        android:orientation="vertical">
        <TextView
            android:id="@+id/finishedTextView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:text="Ойын бітті"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="63sp"/>
        <TextView
            android:id="@+id/scoreTextView"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="0.5"
            android:text="30"
            android:gravity="center"
            android:textSize="100sp"/>
        <TextView
            android:id="@+id/waitTextView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:text="Қарсыласыңыздың ойнағанын күтіңіз"
            android:textSize="40sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2">

    </LinearLayout>

</LinearLayout>
