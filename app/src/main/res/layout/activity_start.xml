<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background"
              android:orientation="vertical"
              tools:context="com.example.user.wordsfromword.StartActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginBottom="60dp"
            android:layout_weight="1">

            <LinearLayout
                android:visibility="visible"
                android:id="@+id/buttonLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <Button
                    android:id="@+id/startButton"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.8"
                    android:background="@drawable/button_start"
                    android:layout_marginRight="50dp"
                    android:layout_marginLeft="50dp"
                    android:text="ОЙНАУ"
                    android:textColor="@color/wordOnBlue"
                    android:textSize="72sp"
                    android:layout_gravity="center"
                    />
                <Button
                    android:layout_marginTop="10dp"
                    android:id="@+id/versusButton"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/button_start"
                    android:layout_marginRight="50dp"
                    android:layout_marginLeft="50dp"
                    android:text="ШАЙҚАС"
                    android:textColor="@color/wordOnBlue"
                    android:textSize="48sp"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_gravity="center"/>

        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:background="@color/bar"
        android:gravity="center_vertical">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            >
            <Button
                android:id="@+id/leadersButton"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/leaderboard"
                android:textColor="@color/wordOnGray"
                android:background="@drawable/barsbutton"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">
            <Button
                android:id="@+id/historyButton"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="ОЙЫНДАР ТАРИХЫ"
                android:textColor="@color/wordOnGray"
                android:background="@drawable/barsbutton"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">
            <Button
                android:id="@+id/logoutButton"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="ШЫҒУ"
                android:textColor="@color/wordOnGray"
                android:background="@drawable/barsbutton"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
