<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background"
              android:orientation="vertical"
              tools:context="com.example.user.wordsfromword.LeaderboardActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.12"
        android:background="@color/bar"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.12"
            android:src="@drawable/back"/>
        <TextView
            android:id="@+id/leadersTextView"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="35sp"
            android:text="@string/leaderboard"/>
        <ImageView
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:id="@+id/typeImageView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.12"
            android:src="@drawable/bymaxx"/>
        <ImageView
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:id="@+id/cityImageView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.12"
            android:src="@drawable/bycity"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.76"
        >
        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            >
        </ListView>
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.12"
        android:background="@color/bar"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/posTextView"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:text=""
            android:textColor="@color/wordOnBlue"
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/usernameTextView"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:text="Лақап"
            android:textColor="@color/wordOnBlue"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/scoreTextView"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:textColor="@color/wordOnBlue"
            android:textSize="30sp"/>
        <TextView
            android:gravity="center"
            android:id="@+id/cityTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="Қала"
            android:textColor="@color/wordOnBlue"
            android:textSize="30sp"/>
    </LinearLayout>
</LinearLayout>
